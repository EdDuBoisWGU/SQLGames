  <style>
    body {
      font-family: "Courier New", monospace;
      background-color: #0b0c10;
      color: #c5c6c7;
      margin: 0;
      padding: 0;
    }
    .container {
      max-width: 900px;
      margin: auto;
      padding: 20px;
    }
    h1, h2 {
      color: #66fcf1;
    }
    .terminal {
      background-color: #1f2833;
      padding: 20px;
      border-radius: 8px;
      margin-bottom: 20px;
    }
    textarea {
      width: 100%;
      height: 100px;
      background-color: #0b0c10;
      color: #66fcf1;
      border: 1px solid #45a29e;
      border-radius: 4px;
      padding: 10px;
    }
    button {
      margin-top: 10px;
      background-color: #45a29e;
      color: #0b0c10;
      border: none;
      padding: 10px 20px;
      cursor: pointer;
      border-radius: 4px;
    }
    #feedback {
      margin-top: 10px;
    }
  </style>
